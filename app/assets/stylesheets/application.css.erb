.main_chart {
    background-color: #000000;
    margin: auto;
    width: 100%;
}

.secondary_chart {
    background-color: #000000;
    margin: auto;
    width: 60%;
}

.headline {
    color: #F5A623;
}

#result_graph_info {
    font-size: 14px;
}


