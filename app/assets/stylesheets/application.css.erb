.item-a {
    grid-area: header;
    display: block;
    text-align: center;
    margin: 0;
    padding-top: 20px;
    padding-bottom: 20px;
    font-family: Verdana, Geneva, Tahoma, sans-serif;
    color: rgb(194, 190, 190);
    font-size: 35px;
    background-color: black;
}

.item-b {
    grid-area: nav;
    font-size: 20px;
    background-color: #F5A623;
    font-family: Verdana, Geneva, Tahoma, sans-serif;
    padding-top: 10px;
    padding-bottom: 10px;
    display: block;
    text-align: center;
}

.item-c {
    background-color: black;
    grid-area: main;
    display: block;
    text-align: center;
    padding: 0px;
    font-family: Verdana, Geneva, Tahoma, sans-serif;
    color: white;
    padding: 0px 10px;
}

.item-d {
    grid-area: footer;
    display: block;
    text-align: center;
    background-color: black;
    padding: 10px;
    color: white;
    padding: 15px 0;
}

.container {
    display: grid;
    grid-template-columns: auto;
    grid-template-rows: 160px auto auto 50px;
    grid-template-areas:
        "header"
        "nav"
        "main"
        "footer";
    justify-items: stretch;
    align-items: stretch;
    gap: 1px;
}

ul {
    font-size: 15px;
    color: white;
    list-style-position: inside;
}

li {
    display: block;
    text-align: center;
    padding: 5px;
}

.link {
    color: white;
    padding: 0 20px;
    text-decoration: none;
    font-size: 24px;
    font-weight: bold;
    /* display: inline; */
    text-align: center;
}

.link:hover {
    color: red;
}

.link_2 {
    color: rgb(249, 6, 6);
    padding: 0 20px;
    text-decoration: none;
    font-size: 24px;
    font-weight: bold;
    /* display: inline; */
    text-align: center;
}

.link_2:hover {
    color: white;
}

.link_3 {
    color: rgb(235, 52, 52);
    font-weight: bold;
}

.link_3:hover {
    color: white;
}

input {
    font-size: 20px;
    font-weight: bold;
    color: black;
    background-color: #fff;
    opacity: 1;
    border: 0;
    border-radius: 0;
    margin-left: auto;
    margin-right: auto;
    padding: 20px;
    border-radius: 4px;
}

input:hover {
    background-color: rgb(179, 178, 178);
}


form {
    padding: 10px 30px;
}

form.text_field {
    padding: 15px 32px;
}

