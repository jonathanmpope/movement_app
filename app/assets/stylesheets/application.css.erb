p {
    font-size: 15px;
    font-weight: bold;
    color: white;
    text-align: center;
    padding: 8px 20px;
}

h1 {
    font-size: 30px;
    font-weight: bold;
    color: white;
    text-align: center;
}

h2 {
    font-size: 25px;
    font-weight: bold;
    color: #F5A623;
    text-align: center;
    /* padding: 5px; */
}

label {
    font-size: 15px;
    font-weight: bold;
    color: white;
    text-align: center;
    padding: 10px;
}

select {
    color: black;
    background-color: #fff;
    opacity: .9;
    width: 400px;
    padding: 12px 20px;
    margin: 8px 0;
    box-sizing: border-box;
    font-size: 17px;
    font-weight: bold;
    border: rgb(221, 221, 221) solid;
    /* background-color: #F5A623; */
    border-radius: 4px;
}

table {
    border-collapse: collapse;
    width: 50%;
    margin: auto;
}

td,
th {
    /* border: 1px solid #dddddd; */
    text-align: center;
    padding: 8px;
}

