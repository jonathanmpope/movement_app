    color: black;
}

tr.zones:nth-child(4) {
    background-color: #058321;
    color: black;
}

tr.zones:nth-child(5) {
    background-color: #f8f801;
    color: black;
}

tr.zones:nth-child(6) {
    background-color: #f8c301;
    color: black;
}

tr.zones:nth-child(7) {
    background-color: #f82601;
    color: black;
